{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"]
	},
	"include": ["*.ts", "railway-gql-lib/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
